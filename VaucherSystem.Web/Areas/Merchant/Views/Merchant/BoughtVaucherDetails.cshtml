@model VaucherSystem.Models.ViewModels.Merchant.BoughtVaucherDetailsViewModel

<hr />
<h3>Bought Vaucher Details</h3>
<table class="table table-striped table-hover table-bordered table-condensed table-responsive">
    <thead>
        <tr class="alert alert-danger">
            <th>Vaucher Name</th>
            <th>Vaucher Unique Code</th>
            <th>Is Bought</th>
        </tr>
    </thead>
    <tbody class="align-left-text">
            
            @for (int i = 0; i < Model.UniqueVaucherCode.Count; i++)
            {
                <tr class="info">
                    <td>@Model.Name</td>
                    <td>@Model.UniqueVaucherCode.ElementAt(i).ToUpper()</td>
                    <td>@Model.IsBought.ElementAt(i)</td>
                </tr>
            }
        
        <tr class="alert alert-danger">
            <th>Customer Email</th>
            <th>Customer Username</th>
        </tr>
        
            @foreach (var customer in Model.EmailsUsernames)
            {
                <tr class="warning">
                    <td>@customer.Email</td>
                    <td>@customer.Username</td>
                </tr>
            }
        
    </tbody>
</table>
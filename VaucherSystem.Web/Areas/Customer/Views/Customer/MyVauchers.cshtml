@model IEnumerable<VaucherSystem.Models.ViewModels.Customer.CustomerVauchersViewModel>

<table class="table table-striped table-hover table-bordered table-condensed table-responsive">
    <thead>
        <tr>
            <th>Vaucher Name</th>
            <th>Vaucher End Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody class="align-left-text">

        @foreach (var vaucher in Model)
            {
            <tr class="info">
                <td>@vaucher.VaucherName</td>
                <td>@vaucher.EndDate</td>
                <td>
                    @Html.ActionLink("Details", "MyVaucherDetails", "Customer", new { area = "Customer", id = vaucher.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>


@model VaucherSystem.Models.ViewModels.Customer.CustomerProfileViewModel

@{
    ViewBag.Title = "My Profile";
}
<hr />
<h3>@ViewBag.Title</h3>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Username: @Model.Username</h3>
            </div>
            <div class="panel-body"><strong>Email:</strong> @Model.Email</div>
            <div class="panel-body"><strong>Bought Vauchers:</strong> @Model.BoughtVauchers</div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            @Html.ActionLink("Change Password", "ChangePassword", "Manage", new { area = ""}, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>
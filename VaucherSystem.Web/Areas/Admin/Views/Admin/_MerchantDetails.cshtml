@model VaucherSystem.Models.ViewModels.Admin.MerchantDetailsViewModel

    <div><strong>Email:</strong> @Model.Email</div>
    <div><strong>Phone Number:</strong> @Model.PhoneNumber</div>
    <div><strong>Sold Vauchers:</strong> @Model.SoldVauchers</div>
    <div>
        @using (Html.BeginForm("DenyAccess", "Admin", FormMethod.Post, new { area = "" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="Email" value="@Model.Email" />
            <button class="btn btn-danger" type="submit">Deny Access</button>
        }
    </div>
@model IEnumerable<VaucherSystem.Models.ViewModels.Home.CheckboxCategoryViewModel>

<div class="form-group">
    <div class="col-sm-10">
        <div class="checkbox">
            @for (int i = 0; i < Model.Count(); i++)
            {
                using (Ajax.BeginForm("Index", "Home", new { area = "" }, new AjaxOptions()
                {
                    UpdateTargetId = "element-to-replace-" + i,
                    HttpMethod = "get",
                    InsertionMode = InsertionMode.Replace
                }, new { @class = "form-inline", role = "form" }))
                {
                    <label>
                        <input type="checkbox" name="Name" />
                    </label>
                }
            }
        </div>
    </div>
</div>

